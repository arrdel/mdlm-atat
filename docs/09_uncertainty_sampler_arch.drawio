<mxfile host="65bd71144e">
    <diagram id="uncertainty-sampler" name="Uncertainty-Guided Sampler Architecture">
        <mxGraphModel dx="1600" dy="900" grid="1" gridSize="10" guides="1" tooltips="1" connect="1" arrows="1" fold="1" page="1" pageScale="1" pageWidth="1400" pageHeight="1500">
            <root>
                <mxCell id="0"/>
                <mxCell id="1" parent="0"/>
                <mxCell id="2" value="Uncertainty-Guided Sampler: Adaptive Inference with Early Termination" style="text;html=1;strokeColor=none;fillColor=none;align=center;verticalAlign=middle;whiteSpace=wrap;rounded=0;fontSize=22;fontStyle=1" vertex="1" parent="1">
                    <mxGeometry x="100" y="20" width="1200" height="40" as="geometry"/>
                </mxCell>
                <mxCell id="3" value="Initialization" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#fff2cc;strokeColor=#d6b656;fontSize=14;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="40" y="80" width="1320" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="4" value="Input Prompt&#xa;Text prefix or empty&#xa;Shape: (B, L_prompt)&#xa;Example: 'The future of AI'" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=11" vertex="1" parent="1">
                    <mxGeometry x="60" y="120" width="250" height="80" as="geometry"/>
                </mxCell>
                <mxCell id="5" value="Model Checkpoint&#xa;Trained ATAT-DiT&#xa;Load weights&#xa;Set to eval mode" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=11" vertex="1" parent="1">
                    <mxGeometry x="330" y="120" width="250" height="80" as="geometry"/>
                </mxCell>
                <mxCell id="6" value="Sampling Config&#xa;num_steps: 50-1000&#xa;temperature: 1.0&#xa;top_k: 50&#xa;top_p: 0.95" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=11" vertex="1" parent="1">
                    <mxGeometry x="600" y="120" width="250" height="80" as="geometry"/>
                </mxCell>
                <mxCell id="7" value="Uncertainty Config&#xa;entropy_threshold: 0.5&#xa;min_confidence: 0.7&#xa;top_k_uncertain: 10%" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=11" vertex="1" parent="1">
                    <mxGeometry x="870" y="120" width="250" height="80" as="geometry"/>
                </mxCell>
                <mxCell id="8" value="Initialize Sequence&#xa;x = [prompt, [MASK]*N]&#xa;All positions masked&#xa;except prompt" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#d5e8d4;strokeColor=#82b366;fontSize=11;fontStyle=1" vertex="1" parent="1">
                    <mxGeometry x="1140" y="120" width="200" height="80" as="geometry"/>
                </mxCell>
                <mxCell id="9" value="Denoising Loop (Iterative)" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1d5e7;strokeColor=#9673a6;fontSize=14;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="40" y="240" width="1320" height="500" as="geometry"/>
                </mxCell>
                <mxCell id="10" value="Step 1: Model Prediction" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=12;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="60" y="280" width="630" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="11" value="Forward Pass&#xa;&#xa;with torch.no_grad():&#xa;    logits = model(x, t=current_step)&#xa;    # logits.shape = (B, L, vocab_size)&#xa;&#xa;For each masked position:&#xa;  - Compute probability distribution&#xa;  - Get predicted token&#xa;  - Calculate uncertainty" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#fff2cc;strokeColor=#d6b656;fontSize=10;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="80" y="320" width="290" height="120" as="geometry"/>
                </mxCell>
                <mxCell id="12" value="Apply Temperature&#xa;&#xa;logits = logits / temperature&#xa;probs = softmax(logits, dim=-1)&#xa;&#xa;Temperature effects:&#xa;  T=0.5: Sharp, conservative&#xa;  T=1.0: Standard&#xa;  T=1.5: Diverse, exploratory" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#ffe6cc;strokeColor=#d79b00;fontSize=10;align=left" vertex="1" parent="1">
                    <mxGeometry x="390" y="320" width="280" height="120" as="geometry"/>
                </mxCell>
                <mxCell id="13" value="Step 2: Uncertainty Computation" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#fff2cc;strokeColor=#d6b656;fontSize=12;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="710" y="280" width="630" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="14" value="Entropy Calculation&#xa;&#xa;H = -Σ p(i) * log(p(i))&#xa;&#xa;For each masked token position:&#xa;  entropy[pos] = -sum(&#xa;      probs[pos] * log(probs[pos] + 1e-10)&#xa;  )&#xa;&#xa;Properties:&#xa;  • High H: Uncertain prediction&#xa;  • Low H: Confident prediction&#xa;  • H=0: Deterministic (one prob=1)&#xa;  • H=log(V): Uniform (V=vocab size)" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=9;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="730" y="320" width="290" height="120" as="geometry"/>
                </mxCell>
                <mxCell id="15" value="Alternative Metrics&#xa;&#xa;Confidence Score:&#xa;  conf = max(probs, dim=-1)&#xa;  uncertainty = 1 - conf&#xa;&#xa;Variance:&#xa;  var = sum((p - p_mean)²)&#xa;&#xa;Top-K Gap:&#xa;  gap = p_1st - p_2nd&#xa;  (difference between top 2)" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#ffe6cc;strokeColor=#d79b00;fontSize=9;align=left" vertex="1" parent="1">
                    <mxGeometry x="1040" y="320" width="280" height="120" as="geometry"/>
                </mxCell>
                <mxCell id="16" value="Step 3: Selective Token Denoising" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#d5e8d4;strokeColor=#82b366;fontSize=12;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="60" y="480" width="630" height="240" as="geometry"/>
                </mxCell>
                <mxCell id="17" value="Identify Uncertain Tokens&#xa;&#xa;masked_positions = (x == MASK_TOKEN_ID)&#xa;masked_entropy = entropy[masked_positions]&#xa;&#xa;# Select top-k most uncertain&#xa;k = int(len(masked_positions) * top_k_ratio)&#xa;_, uncertain_indices = torch.topk(&#xa;    masked_entropy, k=k&#xa;)&#xa;&#xa;top_k_ratio schedule:&#xa;  Early steps: 50% (denoise half)&#xa;  Late steps: 10% (refine few)" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#fff2cc;strokeColor=#d6b656;fontSize=9;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="80" y="520" width="290" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="18" value="Sample Tokens&#xa;&#xa;For selected uncertain positions:&#xa;  if use_greedy:&#xa;      pred = argmax(probs[pos])&#xa;  else:&#xa;      pred = sample(probs[pos])&#xa;&#xa;Top-k/Top-p filtering:&#xa;  # Keep only top-k tokens&#xa;  topk_probs, topk_idx = torch.topk(&#xa;      probs, k=top_k&#xa;  )&#xa;  # Or nucleus (top-p) sampling&#xa;  sorted_probs = sort(probs)&#xa;  cumsum = cumsum(sorted_probs)&#xa;  nucleus = cumsum &lt; top_p" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=9;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="390" y="520" width="280" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="19" value="Step 4: Update Sequence" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#ffe6cc;strokeColor=#d79b00;fontSize=12;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="710" y="480" width="630" height="120" as="geometry"/>
                </mxCell>
                <mxCell id="20" value="Replace Denoised Tokens&#xa;&#xa;x[uncertain_indices] = sampled_tokens[uncertain_indices]&#xa;&#xa;Visual:&#xa;  Before: [The] [MASK] [MASK] [of] [MASK]&#xa;  Entropy:  -    2.3     0.8     -    1.5&#xa;  Top-2:        ✓                  ✓&#xa;  After:  [The] [future] [MASK] [of] [AI]&#xa;&#xa;Keep high-confidence predictions from previous steps" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#f5f5f5;strokeColor=#666666;fontColor=#333333;fontSize=9;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="730" y="520" width="590" height="60" as="geometry"/>
                </mxCell>
                <mxCell id="21" value="Step 5: Convergence Check" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#f8cecc;strokeColor=#b85450;fontSize=12;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="710" y="620" width="630" height="100" as="geometry"/>
                </mxCell>
                <mxCell id="22" value="Early Stopping Criteria&#xa;&#xa;avg_entropy = mean(entropy[masked_positions])&#xa;max_conf = max(confidence[masked_positions])&#xa;&#xa;if avg_entropy &lt; entropy_threshold:  # e.g., 0.5&#xa;    break  # Converged&#xa;if max_conf &gt; min_confidence:  # e.g., 0.7&#xa;    break  # Confident enough&#xa;if num_masked &lt; 5:  # Very few left&#xa;    break&#xa;&#xa;Benefit: Stop early, save 30-50% compute" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#f5f5f5;strokeColor=#666666;fontColor=#333333;fontSize=9;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="730" y="660" width="590" height="40" as="geometry"/>
                </mxCell>
                <mxCell id="23" value="Scheduling Strategies" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1d5e7;strokeColor=#9673a6;fontSize=14;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="40" y="760" width="1320" height="240" as="geometry"/>
                </mxCell>
                <mxCell id="24" value="Linear Schedule&#xa;&#xa;def linear_schedule(step, max_steps):&#xa;    ratio = step / max_steps&#xa;    top_k_ratio = 0.5 * (1 - ratio)&#xa;    # Start: 50%, End: 0%&#xa;    return top_k_ratio&#xa;&#xa;Steps:  0    250   500   750  1000&#xa;Denoise: 50%   38%   25%   12%   0%" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=9;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="60" y="800" width="400" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="25" value="Cosine Schedule&#xa;&#xa;def cosine_schedule(step, max_steps):&#xa;    ratio = step / max_steps&#xa;    top_k_ratio = 0.5 * (1 + cos(π * ratio))&#xa;    # Smooth decay&#xa;    return top_k_ratio&#xa;&#xa;Steps:  0    250   500   750  1000&#xa;Denoise: 50%   46%   25%   4%    0%&#xa;&#xa;Smoother than linear" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#fff2cc;strokeColor=#d6b656;fontSize=9;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="480" y="800" width="400" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="26" value="Adaptive Schedule&#xa;&#xa;def adaptive_schedule(entropy_history):&#xa;    if entropy_history[-1] &gt; threshold:&#xa;        # Still uncertain, denoise more&#xa;        return 0.3&#xa;    else:&#xa;        # Converging, be conservative&#xa;        return 0.1&#xa;&#xa;Adjusts based on actual uncertainty&#xa;More efficient than fixed schedules" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#d5e8d4;strokeColor=#82b366;fontSize=9;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="900" y="800" width="440" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="27" value="Performance Analysis" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#fff2cc;strokeColor=#d6b656;fontSize=14;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="40" y="1020" width="640" height="240" as="geometry"/>
                </mxCell>
                <mxCell id="28" value="Speedup Metrics:&#xa;&#xa;Baseline (uniform sampling):&#xa;  Steps: 1000&#xa;  Time per step: 50ms&#xa;  Total time: 50s&#xa;&#xa;Uncertainty-guided:&#xa;  Avg steps to convergence: 350&#xa;  Time per step: 52ms (+4% overhead)&#xa;  Total time: 18.2s&#xa;&#xa;Speedup: 50 / 18.2 = 2.7x faster&#xa;&#xa;Early termination:&#xa;  30% of sequences converge &lt; 200 steps&#xa;  50% of sequences converge &lt; 400 steps&#xa;  20% need full 1000 steps (complex)&#xa;&#xa;Quality:&#xa;  Perplexity: 23.1 (baseline: 23.0)&#xa;  Negligible quality loss for 2.7x speedup" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#f5f5f5;strokeColor=#666666;fontColor=#333333;fontSize=9;align=left" vertex="1" parent="1">
                    <mxGeometry x="60" y="1060" width="600" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="29" value="Ablation Studies" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#ffe6cc;strokeColor=#d79b00;fontSize=14;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="700" y="1020" width="660" height="240" as="geometry"/>
                </mxCell>
                <mxCell id="30" value="Component Ablations:&#xa;&#xa;1. No uncertainty (uniform):&#xa;   Time: 50s, PPL: 23.0&#xa;&#xa;2. Entropy only:&#xa;   Time: 22s (2.3x), PPL: 23.2&#xa;&#xa;3. Confidence only:&#xa;   Time: 25s (2.0x), PPL: 23.3&#xa;&#xa;4. Entropy + early stopping:&#xa;   Time: 18s (2.7x), PPL: 23.1 ✓ Best&#xa;&#xa;5. Entropy + adaptive schedule:&#xa;   Time: 16s (3.1x), PPL: 23.5&#xa;   (Too aggressive, quality loss)&#xa;&#xa;Optimal Config:&#xa;  • Entropy-based selection&#xa;  • Early stopping at H &lt; 0.5&#xa;  • Cosine schedule&#xa;  • top_k filtering (k=50)" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#f5f5f5;strokeColor=#666666;fontColor=#333333;fontSize=9;align=left" vertex="1" parent="1">
                    <mxGeometry x="720" y="1060" width="620" height="180" as="geometry"/>
                </mxCell>
                <mxCell id="31" value="Hyperparameters" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#d5e8d4;strokeColor=#82b366;fontSize=14;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="40" y="1280" width="440" height="200" as="geometry"/>
                </mxCell>
                <mxCell id="32" value="Sampling:&#xa;  temperature = 1.0&#xa;  top_k = 50&#xa;  top_p = 0.95&#xa;  num_steps_max = 1000&#xa;&#xa;Uncertainty:&#xa;  entropy_threshold = 0.5&#xa;  min_confidence = 0.7&#xa;  top_k_uncertain_ratio = 0.2&#xa;&#xa;Schedule:&#xa;  schedule_type = 'cosine'&#xa;  initial_ratio = 0.5&#xa;  final_ratio = 0.05&#xa;&#xa;Early Stopping:&#xa;  enable = True&#xa;  min_steps = 50  (don't stop too early)&#xa;  patience = 10  (steps without improvement)" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#f5f5f5;strokeColor=#666666;fontColor=#333333;fontSize=9;align=left" vertex="1" parent="1">
                    <mxGeometry x="60" y="1320" width="400" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="33" value="Usage Example" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=14;fontStyle=1;verticalAlign=top" vertex="1" parent="1">
                    <mxGeometry x="500" y="1280" width="860" height="200" as="geometry"/>
                </mxCell>
                <mxCell id="34" value="from mdlm_atat.atat import UncertaintyGuidedSampler&#xa;&#xa;sampler = UncertaintyGuidedSampler(&#xa;    model=atat_dit,&#xa;    entropy_threshold=0.5,&#xa;    top_k=50,&#xa;    schedule='cosine'&#xa;)&#xa;&#xa;prompt = 'The future of artificial intelligence is'&#xa;output, stats = sampler.generate(&#xa;    prompt=prompt,&#xa;    max_length=256,&#xa;    num_steps=1000,&#xa;    return_stats=True&#xa;)&#xa;&#xa;print(f'Generated: {output}')&#xa;print(f'Steps taken: {stats['steps_used']}')  # e.g., 347&#xa;print(f'Avg entropy: {stats['avg_entropy']:.2f}')  # e.g., 0.42&#xa;print(f'Speedup: {1000/stats['steps_used']:.1f}x')  # e.g., 2.9x" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#f5f5f5;strokeColor=#666666;fontColor=#333333;fontSize=8;align=left;fontFamily=Courier New;" vertex="1" parent="1">
                    <mxGeometry x="520" y="1320" width="820" height="140" as="geometry"/>
                </mxCell>
            </root>
        </mxGraphModel>
